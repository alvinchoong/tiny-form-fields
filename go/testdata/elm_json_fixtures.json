{
  "showWhenVisibilityRule": [
    {
      "label": "Color",
      "name": "color",
      "presence": "Required",
      "type": {
        "type": "Dropdown",
        "choices": [
          "Red",
          "Blue"
        ]
      },
      "visibilityRule": []
    },
    {
      "label": "Why Red?",
      "name": "why_red",
      "presence": "Required",
      "type": {
        "type": "ShortText",
        "inputType": "Single-line free text",
        "attributes": {
          "type": "text"
        }
      },
      "visibilityRule": [
        {
          "type": "ShowWhen",
          "conditions": [
            {
              "type": "Field",
              "fieldName": "color",
              "comparison": {
                "type": "Equals",
                "value": "Red"
              }
            }
          ]
        }
      ]
    }
  ],
  "hideWhenVisibilityRule": [
    {
      "label": "Has Comments",
      "name": "has_comments",
      "presence": "Required",
      "type": {
        "type": "ChooseOne",
        "choices": [
          "Yes",
          "No"
        ]
      },
      "visibilityRule": []
    },
    {
      "label": "Comments",
      "name": "comments",
      "presence": "Required",
      "type": {
        "type": "LongText",
        "maxLength": 1000
      },
      "visibilityRule": [
        {
          "type": "HideWhen",
          "conditions": [
            {
              "type": "Field",
              "fieldName": "has_comments",
              "comparison": {
                "type": "Equals",
                "value": "No"
              }
            }
          ]
        }
      ]
    }
  ],
  "stringContainsRule": [
